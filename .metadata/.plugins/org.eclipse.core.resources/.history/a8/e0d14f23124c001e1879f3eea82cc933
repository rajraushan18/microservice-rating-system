# this is an alternate version of writing the application properties

#server
server:
  port: 8081
 
#database 
spring:
  datasource:
    url: jdbc:mysql://localhost:3306/microservices
    username: root
    password: root
    driver-class-name: com.mysql.cj.jdbc.Driver
    
#Hibernate
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true  
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
    
  application:
    name: USER-SERVICE    
    
  config:
    import: configserver:http://localhost:8085
      
      

#commenting as now, config server will be used. This data is common for all the service 
#and is written on config server(GitHub) and it will be fetched from there using the config.import used above        
